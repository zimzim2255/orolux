<!DOCTYPE html>
<html>
<head>
  <title>View Messages | Admin</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h2>User Messages</h2>

  <table border="1" cellpadding="10" width="100%">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Message</th>
      <th>Date</th>
    </tr>
    <% messages.forEach(message => { %>
      <tr>
        <td><%= message._id %></td>
        <td><%= message.name %></td>
        <td><%= message.email %></td>
        <td><%= message.message %></td>
        <td><%= new Date(message.createdAt).toLocaleString() %></td>
      </tr>
    <% }) %>
  </table>

  <br><a href="/admin/dashboard">â¬… Back to Dashboard</a>
</body>
</html>