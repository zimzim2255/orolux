<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<!-- Favicon -->
<link rel="icon" type="image/jpeg" href="/public/logo.jpeg">
<!-- Tailwind CSS -->
<script src="https://cdn.tailwindcss.com"></script>
<!-- Google Fonts -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=Montserrat:wght@300;400&family=Noto+Naskh+Arabic:wght@400;500;600&display=swap">
<!-- Custom Styles -->
<style>
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
    40% {transform: translateY(-20px);}
    60% {transform: translateY(-10px);}
  }
  
  .animate-bounce {
    animation: bounce 2s infinite;
  }

  .rtl-flip {
    transform: scaleX(-1);
  }
</style>
<% if (isRTL) { %>
<style>
  body {
    font-family: 'Noto Naskh Arabic', serif;
    direction: rtl;
  }
  .secondary-font {
    font-family: 'Noto Naskh Arabic', sans-serif;
  }
</style>
<% } else { %>
<style>
  body {
    font-family: 'Cormorant Garamond', serif;
    direction: ltr;
  }
  .secondary-font {
    font-family: 'Montserrat', sans-serif;
  }
</style>
<% } %>
