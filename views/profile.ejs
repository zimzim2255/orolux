<!DOCTYPE html>
<html lang="<%= language %>" dir="<%= isRTL ? 'rtl' : 'ltr' %>">
<head>
  <title><%= user.username %> | <%= t('profile.title') %> | OROLUX</title>
  <%- include('partials/head') %>
  <style>
    .profile-container {
      max-width: 900px;
      margin: 0 auto;
      padding: 6rem 2rem 4rem;
    }

    .profile-title {
      font-size: 2.5rem;
      margin-bottom: 3rem;
      color: #1a1a1a;
      text-align: center;
      font-weight: 300;
      letter-spacing: 2px;
      text-transform: uppercase;
    }

    .profile-content {
      background: #ffffff;
      padding: 3rem;
      border-radius: 2px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .profile-info {
      margin-bottom: 3rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid #eee;
    }

    .profile-info p {
      margin-bottom: 1rem;
      font-size: 1.1rem;
      color: #333;
      letter-spacing: 0.3px;
    }

    .info-label {
      font-weight: 500;
      color: #1a1a1a;
      text-transform: uppercase;
      letter-spacing: 1px;
      font-size: 0.85rem;
      margin-right: 0.5rem;
    }

    .total-spent {
      font-size: 1.25rem;
      color: #1a1a1a;
      font-weight: 500;
      margin: 1.5rem 0;
    }

    .orders-section {
      margin-top: 2rem;
    }

    .orders-title {
      font-size: 1.5rem;
      margin-bottom: 2rem;
      color: #1a1a1a;
      font-weight: 300;
      letter-spacing: 1px;
    }

    .orders-list {
      list-style: none;
      padding: 0;
    }

    .order-item {
      padding: 1.5rem;
      margin-bottom: 1.5rem;
      border: 1px solid #eee;
      border-radius: 2px;
      transition: all 0.3s ease;
    }

    .order-item:hover {
      border-color: #1a1a1a;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .order-detail {
      margin: 8px 0;
      display: flex;
      align-items: center;
    }

    .order-id {
      color: #1a1a1a;
      font-family: monospace;
      font-size: 0.9rem;
    }

    .order-status {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 4px;
      text-transform: capitalize;
      font-size: 0.9rem;
      letter-spacing: 1px;
    }

    .order-status.processing {
      background: rgba(255, 193, 7, 0.2);
      color: #ffc107;
    }

    .order-status.shipped {
      background: rgba(33, 150, 243, 0.2);
      color: #2196f3;
    }

    .order-status.delivered {
      background: rgba(76, 175, 80, 0.2);
      color: #4caf50;
    }

    .order-status.cancelled {
      background: rgba(244, 67, 54, 0.2);
      color: #f44336;
    }

    .action-links {
      margin-top: 2rem;
      display: flex;
      gap: 1rem;
    }

    .action-link {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      text-decoration: none;
      font-weight: 400;
      letter-spacing: 1px;
      transition: all 0.3s ease;
    }

    .back-link {
      color: #1a1a1a;
      border: 1px solid #1a1a1a;
      border-radius: 2px;
    }

    .back-link:hover {
      background: #1a1a1a;
      color: #ffffff;
    }

    .logout-link {
      background: #1a1a1a;
      color: #ffffff;
      border-radius: 2px;
    }

    .logout-link:hover {
      background: #333;
      transform: translateY(-1px);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .profile-section {
      margin-bottom: 2rem;
    }

    .section-title {
      font-size: 1.3rem;
      color: #1a1a1a;
      font-weight: 400;
      letter-spacing: 1px;
      margin-bottom: 1.5rem;
    }

    .info-grid {
      display: grid;
      grid-template-columns: 1fr auto;
      gap: 2rem;
      align-items: start;
    }

    .info-item {
      display: grid;
      gap: 1rem;
    }

    .profile-actions {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .action-btn {
      display: inline-flex;
      align-items: center;
      padding: 0.75rem 1.5rem;
      text-decoration: none;
      font-weight: 400;
      letter-spacing: 1px;
      transition: all 0.3s ease;
      border-radius: 2px;
      min-width: 200px;
      justify-content: center;
    }

    .action-btn i {
      margin-right: 0.5rem;
    }

    .edit-btn {
      background: #1a1a1a;
      color: #ffffff;
    }

    .edit-btn:hover {
      background: #333;
      transform: translateY(-1px);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .password-btn {
      background: #ffffff;
      color: #1a1a1a;
      border: 1px solid #1a1a1a;
    }

    .password-btn:hover {
      background: #1a1a1a;
      color: #ffffff;
    }    .wishlist-btn {
      background: #fff0f0;
      color: #1a1a1a;
      border: 1px solid #ffe0e0;
    }

    .wishlist-btn:hover {
      background: #ffe0e0;
      border-color: #1a1a1a;
    }

    .order-actions {
      margin-top: 1rem;
      display: flex;
      gap: 1rem;
    }

    .view-order-btn {
      display: inline-flex;
      align-items: center;
      padding: 0.5rem 1rem;
      background: #1a1a1a;
      color: #ffffff;
      text-decoration: none;
      border-radius: 2px;
      font-size: 0.9rem;
      transition: all 0.3s ease;
    }

    .view-order-btn:hover {
      background: #333;
      transform: translateY(-1px);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .delivery-info, .products-info {
      margin: 20px 0;
      padding: 20px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 8px;
      backdrop-filter: blur(10px);
    }

    .info-subtitle {
      font-size: 1.1em;
      color: #B8860B;
      margin-bottom: 15px;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .products-list {
      list-style: none;
      padding: 0;
    }

    .product-item {
      display: flex;
      justify-content: space-between;
      padding: 10px 0;
      border-bottom: 1px solid rgba(184, 134, 11, 0.2);
    }

    .product-item:last-child {
      border-bottom: none;
    }

    .product-name {
      color: #fff;
      flex: 1;
    }

    .product-price {
      color: #B8860B;
      margin-left: 20px;
    }

    /* Modal Styles */
    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 1000;
      align-items: center;
      justify-content: center;
    }

    .modal.show {
      display: flex;
    }

    .modal-content {
      background: #ffffff;
      padding: 2rem;
      border-radius: 2px;
      width: 100%;
      max-width: 400px;
      position: relative;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    }

    .modal-title {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
      color: #1a1a1a;
      font-weight: 300;
      letter-spacing: 1px;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 500;
      color: #1a1a1a;
      font-size: 0.9rem;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .form-input {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #eee;
      border-radius: 2px;
      font-size: 1rem;
      transition: all 0.3s ease;
    }

    .form-input:focus {
      outline: none;
      border-color: #1a1a1a;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .modal-actions {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
    }

    .modal-btn {
      flex: 1;
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: 2px;
      font-size: 0.9rem;
      font-weight: 400;
      letter-spacing: 1px;
      text-transform: uppercase;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .submit-btn {
      background: #1a1a1a;
      color: #ffffff;
    }

    .submit-btn:hover {
      background: #333;
      transform: translateY(-1px);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .cancel-btn {
      background: #f8f8f8;
      color: #1a1a1a;
      border: 1px solid #eee;
    }

    .cancel-btn:hover {
      border-color: #1a1a1a;
      background: #ffffff;
    }

    .close-modal {
      position: absolute;
      top: 1rem;
      right: 1rem;
      background: none;
      border: none;
      font-size: 1.5rem;
      color: #1a1a1a;
      cursor: pointer;
      padding: 0.5rem;
      line-height: 1;
    }

    @media (max-width: 640px) {
      .profile-container {
        padding: 4rem 1rem 2rem;
      }

      .profile-content {
        padding: 2rem;
      }

      .profile-title {
        font-size: 2rem;
        margin-bottom: 2rem;
      }
    }

    @media (max-width: 768px) {
      .info-grid {
        grid-template-columns: 1fr;
      }

      .profile-actions {
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: start;
      }

      .action-btn {
        min-width: auto;
        flex: 1 1 auto;
      }
    }
  </style>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body class="font-sans antialiased">
  <%- include('partials/header') %>
  <div class="profile-container">
    <h2 class="profile-title"><%= t('profile.welcomeMessage') %>, <%= user.username %></h2>
    <div class="profile-content">
      <div class="profile-info">
        <div class="profile-section">
          <h3 class="section-title"><%= t('profile.accountInformation') %></h3>
          <div class="info-grid">
            <div class="info-item">
              <p><span class="info-label"><%= t('profile.username') %>:</span> <%= user?.username || t('profile.notAvailable') %></p>
              <p><span class="info-label"><%= t('profile.email') %>:</span> <%= user?.email || t('profile.notAvailable') %></p>
              <p class="total-spent">
                <span class="info-label"><%= t('profile.totalSpent') %>:</span> 
                $<%= (user?.totalSpent || 0).toFixed(2) %>
              </p>
              <p><span class="info-label"><%= t('profile.memberSince') %>:</span> <%= new Date(user?.createdAt || Date.now()).toLocaleDateString(language) %></p>
            </div>
            <div class="profile-actions">
              <button onclick="openModal('emailModal')" class="action-btn edit-btn">
                <i class="fas fa-envelope"></i> <%= t('profile.changeEmail') %>
              </button>
              <button onclick="openModal('passwordModal')" class="action-btn password-btn">
                <i class="fas fa-key"></i> <%= t('profile.changePassword') %>
              </button>
              <a href="/wishlist" class="action-btn wishlist-btn">
                <i class="fas fa-heart"></i> <%= t('profile.myWishlist') %>
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="orders-section">
        <h3 class="orders-title"><%= t('profile.yourOrders') %></h3>
        <% if (orders && orders.length > 0) { %>
          <ul class="orders-list">
            <% orders.forEach(order => { %>
              <li class="order-item">
                <p class="order-detail"><span class="info-label"><%= t('profile.orderId') %>:</span> <span class="order-id"><%= order?._id || t('profile.notAvailable') %></span></p>
                <p class="order-detail"><span class="info-label"><%= t('profile.total') %>:</span> $<%= (order?.total || 0).toFixed(2) %></p>
                <p class="order-detail"><span class="info-label"><%= t('profile.date') %>:</span> <%= new Date(order?.createdAt || Date.now()).toLocaleString(language) %></p>
                <p class="order-detail"><span class="info-label"><%= t('profile.status') %>:</span> <span class="order-status <%= order?.status?.toLowerCase() %>"><%= t('profile.orderStatus.' + (order?.status?.toLowerCase() || 'processing')) %></span></p>

                <div class="delivery-info">
                  <h4 class="info-subtitle"><%= t('profile.deliveryInformation') %></h4>
                  <p class="order-detail"><span class="info-label"><%= t('profile.name') %>:</span> <%= order?.deliveryInfo?.name || t('profile.notAvailable') %></p>
                  <p class="order-detail"><span class="info-label"><%= t('profile.phone') %>:</span> <%= order?.deliveryInfo?.phone || t('profile.notAvailable') %></p>
                  <p class="order-detail"><span class="info-label"><%= t('profile.address') %>:</span> <%= order?.deliveryInfo?.address || t('profile.notAvailable') %></p>
                  <p class="order-detail"><span class="info-label"><%= t('profile.email') %>:</span> <%= order?.deliveryInfo?.email || order?.user?.email || t('profile.notAvailable') %></p>
                </div>

                <div class="products-info">
                  <h4 class="info-subtitle"><%= t('profile.productsOrdered') %></h4>
                  <ul class="products-list">
                    <% order.products.forEach(item => { %>
                      <li class="product-item">
                        <span class="product-name"><%= item.productId?.name || t('profile.productUnavailable') %></span>
                        <span class="product-price">$<%= (item.productId?.price || 0).toFixed(2) %> x <%= item.quantity %></span>
                      </li>
                    <% }) %>
                  </ul>
                </div>

                <div class="order-actions">
                  <a href="/order/<%= order?._id %>" class="view-order-btn"><%= t('profile.viewDetails') %></a>
                </div>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p><%= t('profile.noOrders') %></p>
        <% } %>
      </div>

      <div class="action-links">
        <a href="/" class="action-link back-link">← <%= t('profile.returnToHome') %></a>
        <a href="/logout" class="action-link logout-link"><%= t('profile.logout') %></a>
      </div>
    </div>
  </div>

  <!-- Email Change Modal -->
  <div id="emailModal" class="modal">
    <div class="modal-content">
      <button class="close-modal" onclick="closeModal('emailModal')">&times;</button>
      <h3 class="modal-title"><%= t('profile.changeEmailAddress') %></h3>
      <form action="/profile/change-email" method="POST" id="emailForm">
        <div class="form-group">
          <label class="form-label"><%= t('profile.newEmailAddress') %></label>
          <input type="email" name="newEmail" class="form-input" required 
                 placeholder="<%= t('profile.enterNewEmail') %>">
        </div>
        <div class="modal-actions">
          <button type="button" class="modal-btn cancel-btn" 
                  onclick="closeModal('emailModal')"><%= t('profile.cancel') %></button>
          <button type="submit" class="modal-btn submit-btn"><%= t('profile.updateEmail') %></button>
        </div>
      </form>
    </div>
  </div>

  <!-- Password Change Modal -->
  <div id="passwordModal" class="modal">
    <div class="modal-content">
      <button class="close-modal" onclick="closeModal('passwordModal')">&times;</button>
      <h3 class="modal-title"><%= t('profile.changePassword') %></h3>
      <form action="/profile/change-password" method="POST" id="passwordForm">
        <div class="form-group">
          <label class="form-label"><%= t('profile.currentPassword') %></label>
          <input type="password" name="currentPassword" class="form-input" required 
                 placeholder="<%= t('profile.enterCurrentPassword') %>">
        </div>
        <div class="form-group">
          <label class="form-label"><%= t('profile.newPassword') %></label>
          <input type="password" name="newPassword" class="form-input" required 
                 placeholder="<%= t('profile.enterNewPassword') %>">
        </div>
        <div class="form-group">
          <label class="form-label"><%= t('profile.confirmNewPassword') %></label>
          <input type="password" name="confirmPassword" class="form-input" required 
                 placeholder="<%= t('profile.confirmNewPasswordPlaceholder') %>">
        </div>
        <div class="modal-actions">
          <button type="button" class="modal-btn cancel-btn" 
                  onclick="closeModal('passwordModal')"><%= t('profile.cancel') %></button>
          <button type="submit" class="modal-btn submit-btn"><%= t('profile.updatePassword') %></button>
        </div>
      </form>
    </div>
  </div>

  <script>
    function openModal(modalId) {
      document.getElementById(modalId).classList.add('show');
      document.body.style.overflow = 'hidden';
    }

    function closeModal(modalId) {
      document.getElementById(modalId).classList.remove('show');
      document.body.style.overflow = '';
    }

    // Handle form submissions with AJAX
    document.getElementById('emailForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      try {
        const form = e.target;
        const response = await fetch(form.action, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(Object.fromEntries(new FormData(form)))
        });
        const data = await response.json();
        if (response.ok) {
          alert('Email updated successfully!');
          closeModal('emailModal');
          location.reload();
        } else {
          alert(data.error || 'Error updating email');
        }
      } catch (err) {
        alert('Error updating email');
      }
    });

    document.getElementById('passwordForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      try {
        const form = e.target;
        const response = await fetch(form.action, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(Object.fromEntries(new FormData(form)))
        });
        const data = await response.json();
        if (response.ok) {
          alert('Password updated successfully!');
          closeModal('passwordModal');
          form.reset();
        } else {
          alert(data.error || 'Error updating password');
        }
      } catch (err) {
        alert('Error updating password');
      }
    });
  </script>

  <%- include('partials/footer') %>
</body>
</html>